[colors]
background = #2E3440
foreground = #D8DEE9

[module/i3]
type = internal/i3
strip-wsnumbers = true
label-focused-foreground = #5E81AC
label-separator-padding = 2

[module/cpu]
type = internal/cpu
label = CPU %percentage%%

[module/memory]
type = internal/memory
label = RAM %gb_used%/%gb_free%

[module/temperature]
type = internal/temperature

[module/date]
type = internal/date
date = %d-%m-%Y%
time = %H:%M
label = %date% %time%

[bar/default]
width = 100%
height = 3%
padding = 2
fixed-center = true
bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

module-margin = 1

font-0 = Meslo LG S DZ:style=Regular:size=10
font-1 = Font Awesome 5 Free:style=Solid:pixelsize=12;1
font-2 = Font Awesome 5 Brands:pixelsize=8;1

modules-left = i3
