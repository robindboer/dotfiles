[colors]
background = #2E3440
foreground = #81A1C1

[module/i3]
type = internal/i3
strip-wsnumbers = true
label-focused-foreground = #D8DEE9
label-separator-padding = 2

[module/cpu]
type = internal/cpu
label = CPU %percentage%%

[module/memory]
type = internal/memory
label = RAM %gb_used%/%gb_free%

[module/temperature]
type = internal/temperature

[module/date]
type = internal/date
date = %d-%m-%Y%
time = %H:%M
label = %date% %time%

[module/pulseaudio-control]
type = custom/script
tail = true
label-padding = 2
label-foreground = #81A1C1

exec = pulseaudio-control --icons-volume " , " --icon-muted " " --sink-nicknames-from "device.description" listen
click-right = exec pavucontrol &
click-left = pulseaudio-control togmute
click-middle = pulseaudio-control next-sink
scroll-up = pulseaudio-control --volume-max 130 up
scroll-down = pulseaudio-control --volume-max 130 down

[bar/default]
width = 100%
height = 3%
padding = 2
fixed-center = true
bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

module-margin = 1

font-0 = Meslo LG M DZ:style=Regular:size=10
font-1 = Font Awesome 5 Free:style=Solid:pixelsize=12;1
font-2 = Font Awesome 5 Brands:pixelsize=8;1

modules-left = i3
modules-right = pulseaudio-control cpu memory temperature date

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true
